{
  "context": {
    "fileName": [
      "GEMINI.md",
      "AGENTS.md",
      "SPEC.md",
      "TESTING.md"
    ]
  },
  "ui": {
    "footer": {
      "hideSandboxStatus": true
    }
  },
  "security": {
    "enablePermanentToolApproval": true
  },
  "experimental": {
    "skills": true
  },
  "tools": {
    "enableHooks": true
  },
  "hooks": {
    "enabled": true,
    "BeforeTool": [
      {
        "matcher": "write_file|replace",
        "hooks": [
          {
            "name": "restrict-filesystem-access",
            "type": "command",
            "command": "python3 .gemini/hooks/restrict_write_access.py",
            "description": "Enforces 'research and plan' mode by restricting write operations to the temp/ directory.",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
